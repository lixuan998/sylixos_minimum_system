#*********************************************************************************************************
# Clear setting
#*********************************************************************************************************
include $(CLEAR_VARS_MK)

#*********************************************************************************************************
# Target
#*********************************************************************************************************
LOCAL_TARGET_NAME := lua

#*********************************************************************************************************
# LUA 5.1 Source list
#*********************************************************************************************************
LOCAL_SRCS_51 := \
lua5.1/src/lua.c

#*********************************************************************************************************
# LUA 5.2 Source list
#*********************************************************************************************************
LOCAL_SRCS_52 := \
lua5.2/src/lua.c

#*********************************************************************************************************
# LUA 5.3 Source list
#*********************************************************************************************************
LOCAL_SRCS_53 := \
lua5.3/src/lua.c

#*********************************************************************************************************
# Source list
#*********************************************************************************************************
ifeq ($(LUA_VER), 5.1)
LOCAL_SRCS := $(LOCAL_SRCS_51)
endif
ifeq ($(LUA_VER), 5.2)
LOCAL_SRCS := $(LOCAL_SRCS_52)
endif
ifeq ($(LUA_VER), 5.3)
LOCAL_SRCS := $(LOCAL_SRCS_53)
endif

#*********************************************************************************************************
# Header file search path (eg. LOCAL_INC_PATH := -I"Your hearder files search path")
#*********************************************************************************************************
LOCAL_INC_PATH := 
LOCAL_INC_PATH += -I"$(SYLIXOS_BASE_PATH)/libreadline"

#*********************************************************************************************************
# Pre-defined macro (eg. -DYOUR_MARCO=1)
#*********************************************************************************************************
LOCAL_DSYMBOL := -DLUA_COMPAT_ALL -DLUA_USE_LINUX

#*********************************************************************************************************
# Depend library (eg. LOCAL_DEPEND_LIB := -la LOCAL_DEPEND_LIB_PATH := -L"Your library search path")
#*********************************************************************************************************
LOCAL_DEPEND_LIB      := -llua -lreadline
LOCAL_DEPEND_LIB_PATH := -L"./$(OUTDIR)" -L"$(SYLIXOS_BASE_PATH)/libreadline/$(OUTDIR)"

#*********************************************************************************************************
# C++ config
#*********************************************************************************************************
LOCAL_USE_CXX        := no
LOCAL_USE_CXX_EXCEPT := no

#*********************************************************************************************************
# Code coverage config
#*********************************************************************************************************
LOCAL_USE_GCOV := no

#*********************************************************************************************************
# Depend target
#*********************************************************************************************************
LOCAL_DEPEND_TARGET := ./$(OUTDIR)/liblua.so

include $(APPLICATION_MK)

#*********************************************************************************************************
# End
#*********************************************************************************************************
